<%- include ('partials/header.ejs') %>
<%- include ('partials/homeNavBar.ejs') %>

<body>
    <div class="container">
        <br>
        <div class="jumbotron form-control bg-light">
            <h1 class="display-4">Seja Bem-vindo(a)</h1>
            <p class="lead">Este é um simples blog</p>
            <hr class="my-4">
            <p>Descrição detalhada aqui!</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>
        <hr>
        <% articles.forEach(article => { %>
           <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
           </div>
           <br>
        <% }) %>
        </div>
    </div>
</body>

